    <target name="debug-nb">
        <path id="cp">
            <!-- TODO configure the runtime classpath for your project here: -->
        </path>
        <nbjpdastart addressproperty="jpda.address" name="HW2" transport="dt_socket">
            <classpath refid="cp"/>
        </nbjpdastart>
        <!-- TODO configure the main class for your project here: -->
        <java classname="Server" fork="true" input=".\inputs\server1.txt">
            <classpath location="${build}"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target name="debug-selected-file-in-paterw_stc826">
    <action name="run.single">
        <target>run-single</target>
        <context>
            <property>runclass</property>
            <folder>${src.dir}</folder>
            <pattern>\.java$</pattern>
            <format>java-name</format>
            <arity>
                <one-file-only/>
            </arity>
        </context>
    </action>
        <fail unless="debug.class">Must set property 'debug.class'</fail>
        <path id="cp">
            <!-- TODO configure the runtime classpath for your project here: -->
        </path>
        <nbjpdastart addressproperty="jpda.address" name="HW2" transport="dt_socket">
            <classpath refid="cp"/>
        </nbjpdastart>
        <java classname="${debug.class}" fork="true" input=".\inputs\client1.txt">
            <classpath location="${build}"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
